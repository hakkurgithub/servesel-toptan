generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- KULLANICI MODELİ ---
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?   // <-- HATA ÇÖZÜMÜ İÇİN BU EKLENDİ
  role      Role      @default(BUYER)
  company   String?
  taxNo     String?
  address   String?
  phone     String?
  isApproved Boolean  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  orders    Order[]
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

// --- KATEGORİ MODELİ ---
model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String    @unique
}

// --- ÜRÜN MODELİ ---
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  price       Float
  image       String?  // Ana resim
  images      String[] // <-- ÇOKLU RESİM İÇİN BU EKLENDİ
  category    String?
  stock       Int      @default(0)
  link        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  OrderItems   OrderItem[]
}

// --- SİPARİŞ MODELİ ---
model Order {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  items         OrderItem[]
  total         Float
  status        String      @default("Hazırlanıyor") 
  paymentMethod String      @default("Havale/EFT")
  createdAt     DateTime    @default(now())
}

// --- SİPARİŞ DETAYI ---
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}