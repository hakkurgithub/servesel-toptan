generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- KULLANICI MODELİ ---
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  role      Role      @default(BUYER)
  company   String?
  taxNo     String?
  address   String?
  phone     String?
  isApproved Boolean  @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // İlişkiler
  orders    Order[]
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

// --- KATEGORİ MODELİ ---
model Category {
  id       Int       @id @default(autoincrement())
  name     String
  slug     String    @unique
}

// --- ÜRÜN MODELİ ---
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique  // <-- EKSİK OLAN BU EKLENDİ
  description String?
  price       Float
  image       String?
  category    String?
  stock       Int      @default(0)
  
  // Yeni Eklenen Alanlar
  link        String?  // Ürün/Tedarikçi Linki
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // İlişkiler
  OrderItems   OrderItem[]
}

// --- SİPARİŞ MODELİ ---
model Order {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  
  items     OrderItem[] // İlişkisel yapı
  total     Float
  status    String      @default("Hazırlanıyor") 
  createdAt DateTime    @default(now())
}

// --- SİPARİŞ DETAYI (ARA TABLO) ---
model OrderItem {
  id        String  @id @default(cuid())
  
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Float   // O anki satış fiyatı
}